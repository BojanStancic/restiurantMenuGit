{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('orders')%}
        <div class="alert alert-success">
            <h3>{{ message }}</h3>
        </div>
    {% endfor %}
    <!-- Playlist section -->
    <section class="playlist-section spad">
        <div class="container-fluid">
            <div class="section-title">
                <h2>Menu Card</h2>
            </div>
            <div class="container">
                <ul class="playlist-filter controls">
                    <li class="control" data-filter=".Drinks">Drinks</li>
                    <li class="control" data-filter=".Appetizers">Appetizers</li>
                    <li class="control" data-filter=".MainDishes">Main Dishes</li>
                    <li class="control" data-filter=".Dessert">Desserts</li>
                    <li class="control" data-filter="all">All Dishes</li>
                </ul>
            </div>
            <div class="clearfix"></div>
            <div class="row playlist-area">
                {% for dish in dishes %}

                <div class="mix col-lg-3 col-md-4 col-sm-6 {{ dish.category }}">
                    <div class="playlist-item">
                        <img src="{{ asset('images/' ~ dish.image) }}" alt="">
                        <h5>{{ dish.description }} - {{ dish.price }}&euro;</h5>
                        <p>OrderNo . {{ dish.id }}
                            <a class="btn btn-danger btn-sm" href="{{ path('orders', {id: dish.id}) }}" role="button">Order</a>
                        </p>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </section>
    <!-- Playlist section end -->
{% endblock %}
